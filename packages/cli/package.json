{
  "name": "@centrifuge-cli/cli",
  "description": "A cool terminal CLI to interact with Centrifuge ecosystem",
  "version": "0.1.0",
  "author": "admin@centrifuge.io",
  "bugs": "https://github.com/centrifuge/centrifuge-cli/issues",
  "bin": {
    "centrifuge": "./bin/run"
  },
  "type": "commonjs",
  "license": "Apache-2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "directory": "packages/cli",
    "url": "https://github.com/centrifuge/centrifuge-cli.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "centrifuge",
    "centrifuge-cli-plugin"
  ],
  "scripts": {
    "clean": "rimraf dist node_modules tsconfig.tsbuildinfo .nyc_output",
    "prepack": "yarn build",
    "build": "yarn clean && yarn compile",
    "compile": "tsc --build && cp \"./package.json\" ./dist/",
    "test": "echo 'no test'",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --max-warnings=0"
  },
  "dependencies": {
    "@heroku-cli/color": "^1.1.0",
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-commands": "^1.3.0",
    "@oclif/plugin-help": "^3.2.0",
    "@oclif/plugin-autocomplete": "^0.3.0",    
    "@centrifuge-cli/plugin-chain": "0.1.0",
    "@centrifuge-cli/plugin-migration": "0.1.0",
    "@centrifuge-cli/plugin-crowdloan": "0.1.0",
    "tslib": "^2"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@types/node": "^16.0.0",
    "eslint": "^8.0.0",
    "eslint-config-oclif": "^4.0.0",
    "eslint-config-oclif-typescript": "^1.0.1",
    "globby": "^12.0.0",
    "ts-node": "^10.4.0",
    "typescript": "~4.4.4"
  },
  "oclif": {
    "bin": "centrifuge",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-commands",
      "@oclif/plugin-autocomplete",
      "@centrifuge-cli/plugin-chain",
      "@centrifuge-cli/plugin-crowdloan",
      "@centrifuge-cli/plugin-migration"
    ]
  },
  "files": [
    "/dist",
    "/oclif.manifest.json",
    "/bin",
    "/npm-shrinkwrap.json",
    "/yarn.lock"
  ],
  "topics": {
    "chain": {
      "description": "chain management",
      "hidden": true
    }
  }
}