{
  "name": "@centrifuge-cli/dispatcher",
  "description": "Library used for dispatching blocks.",
  "version": "0.1.0",
  "author": "Centrifuge Foundation <admin@centrifuge.io>",
  "homepage": "https://github.com/centrifuge/centrifuge-cli#README.md",
  "bugs": {"url": "https://github.com/centrifuge/centrifuge-cli/issues"},
  "license": "Apache-2.0",
  "keywords": [
    "centrifuge",
    "centrifuge-cli",
    "lib-dispatcher"
  ],
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    "./*": "./dist/*"
  },
  "typesVersions": {
      "*": { 
          "*": ["dist/*"]
      }
  },
  "repository": {
    "type": "git",
    "directory": "packages/libs/dispatcher",
    "url": "https://github.com/centrifuge/centrifuge-cli.git"
  },
  "engines": {
    "node": ">=14.17.4"
  },
  "scripts": {
    "clean": "rimraf dist node_modules tsconfig.tsbuildinfo .nyc_output",
    "compile": "tsc --build && cp \"./package.json\" ./dist/",
    "build": "yarn clean && yarn compile",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --max-warnings=0",
    "pretest": "tsc -p test --noEmit",
    "posttest": "yarn lint",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "prepack": "yarn build",
    "postpack": "rm -f oclif.manifest.json",
    "version": "oclif-dev readme && git add README.md"    
  },
  "dependencies": {
    "@polkadot/api": "^6.5.2"
  },
  "devDependencies": {
    "rimraf": "^3.0.0"
  }
}