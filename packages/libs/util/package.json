{
  "name": "@centrifuge-cli/util",
  "description": "Utility routines used to implement Centrifuge CLI.",
  "version": "0.1.0",
  "author": "Centrifuge Foundation <admin@centrifuge.io>",
  "homepage": "https://github.com/centrifuge/centrifuge-cli#README.md",
  "bugs": {"url": "https://github.com/centrifuge/centrifuge-cli/issues"},
  "license": "Apache-2.0",
  "keywords": [
    "centrifuge",
    "centrifuge-cli",
    "lib-util"
  ],
  "type": "module",
  "main": "dist/index.js",
  "exports": {
      "./*": "./dist/*"
  },
  "typesVersions": {
      "*": { 
          "*": ["dist/*"]
      }
  },
  "repository": {
    "type": "git",
    "directory": "packages/libs/util",
    "url": "https://github.com/centrifuge/centrifuge-cli.git"
  },
  "engines": {
    "node": ">=14.17.4"
  },
  "scripts": {
    "clean": "rimraf dist node_modules .nyc_output",
    "compile": "tsc --build && cp ./package.json ./dist/",
    "build": "yarn clean && yarn compile",
    "lint": "eslint src/**/*.ts --max-warnings=0 --config .eslintrc.json --ignore-path .eslintignore",
    "lint:fix": "eslint --fix src/**/*.ts",
    "pretest": "tsc -p test --noEmit",
    "posttest": "yarn lint",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "prepack": "yarn build",
    "postpack": "rm -f oclif.manifest.json",
    "version": "oclif-dev readme && git add README.md"    
  },
  "devDependencies": {
    "rimraf": "^3.0.0"
  }
}