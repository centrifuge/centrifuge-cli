{
  "name": "@centrifuge-cli/plugin-cli",
  "description": "A command-line terminal interface to interact with Centrifuge components.",
  "version": "0.1.0",
  "author": "Centrifuge Foundation <info@centrifuge.io>",
  "homepage": "https://github.com/centrifuge/centrifuge-cli#README.md",
  "bugs": {"url": "https://github.com/centrifuge/centrifuge-cli/issues"},
  "license": "Apache-2.0",
  "keywords": [
    "centrifuge",
    "centrifuge-cli-plugin"
  ],
  "bin": {
    "centrifuge": "./bin/run"
  },
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    "./*": "./dist/*"
  },
  "typesVersions": {
    "*": { 
      "*": ["dist/*"]
    }
  },
  "repository": {
    "type": "git",
    "directory": "packages/cli",
    "url": "https://github.com/centrifuge/centrifuge-cli.git"
  },
  "engines": {
    "node": ">=14.17.4"
  },
  "scripts": {
    "clean": "rimraf dist node_modules .nyc_output",
    "compile": "tsc --build && cp ./package.json ./dist/",
    "build": "yarn clean && yarn compile",
    "lint": "eslint src/**/*.ts --max-warnings=0 --config .eslintrc.json --ignore-path .eslintignore",
    "lint:fix": "eslint --fix src/**/*.ts",
    "pretest": "tsc -p test --noEmit",
    "posttest": "yarn lint",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "prepack": "yarn build",
    "postpack": "rm -f oclif.manifest.json",
    "version": "oclif-dev readme && git add README.md"
  },
 
  "dependencies": {
    "@heroku-cli/color": "^1.1.0",
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-commands": "^1.3.0",
    "@oclif/plugin-help": "^3.2.0",
    "@oclif/plugin-autocomplete": "^0.3.0",    
    "@centrifuge-cli/plugin-chain": "0.1.0",
    "@centrifuge-cli/plugin-migration": "0.1.0",
    "@centrifuge-cli/plugin-crowdloan": "0.1.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@types/node": "^16.11.0",
    "eslint": "^8.3.0",
    "eslint-config-oclif": "^4.0.0",
    "eslint-config-oclif-typescript": "^1.0.0",
    "globby": "^10.0.0",
    "ts-node": "^10.4.0",
    "typescript": "~4.4.4"
  },
  "oclif": {
    "bin": "centrifuge-cli",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-commands",
      "@oclif/plugin-autocomplete",
      "@centrifuge-cli/plugin-chain",
      "@centrifuge-cli/plugin-crowdloan",
      "@centrifuge-cli/plugin-migration"
    ]
  },
  "files": [
    "/dist",
    "/oclif.manifest.json",
    "/bin",
    "/npm-shrinkwrap.json",
    "/yarn.lock"
  ]
}