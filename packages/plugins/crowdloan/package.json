{
  "name": "@centrifuge-cli/plugin-crowdloan",
  "description": "Plugin used for managing Centrifuge parachain's crowdloan auctions on Polkadot relay chain.",
  "version": "0.1.0",
  "author": "Centrifuge Foundation <admin@centrifuge.io>",
  "homepage": "https://github.com/centrifuge/centrifuge-cli#README.md",
  "bugs": {"url": "https://github.com/centrifuge/centrifuge-cli/issues"},
  "license": "Apache-2.0",
  "keywords": [
    "centrifuge",
    "centrifuge-cli",
    "plugin-crowdloan"
  ],
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    "./*": "./dist/*"
  },
  "typesVersions": {
      "*": { 
          "*": ["dist/*"]
      }
  },
  "repository": {
    "type": "git",
    "directory": "packages/plugins/crowdloan",
    "url": "https://github.com/centrifuge/centrifuge-cli.git"
  },
  "engines": {
    "node": ">=14.17.4"
  },
  "scripts": {
    "clean": "rimraf dist node_modules tsconfig.tsbuildinfo .nyc_output",
    "compile": "tsc --build && cp \"./package.json\" ./dist/",
    "build": "yarn clean && yarn compile",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --max-warnings=0",
    "pretest": "tsc -p test --noEmit",
    "posttest": "yarn lint",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "prepack": "yarn build",
    "postpack": "rm -f oclif.manifest.json",
    "version": "oclif-dev readme && git add README.md"    
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@polkadot/api": "^6.5.2",
    "@centrifuge-cli/core": "0.1.0",
    "@centrifuge-cli/util": "0.1.0",
    "json-bigint": "^1.0.0",
    "axios": "^0.21.4",
    "ts-postgres": "^1.1.3"
  },
  "devDependencies": {
    "rimraf": "^3.0.0"
  },
  "oclif": {
    "commands": "./dist/commands",
    "bin": "crowdloan",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "files": [
    "/dist",
    "/oclif.manifest.json",
    "/yarn.lock"
  ]
}