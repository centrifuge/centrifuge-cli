{
  "name": "@centrifuge-cli/plugin-chain",
  "version": "0.1.0",
  "license": "Apache-2",
  "author": "Centrifuge Foundation <admin@centrifuge.io>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "directory": "packages/plugins/chain",
    "url": "https://github.com/centrifuge/centrifuge-cli.git"
  },
  "scripts": {
    "clean": "rimraf dist node_modules tsconfig.tsbuildinfo .nyc_output",
    "postpack": "rm -f oclif.manifest.json",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --max-warnings=0 --config .eslintrc",
    "pretest": "tsc -p test --noEmit",
    "posttest": "yarn lint",    
    "prepack": "yarn build",
    "build": "yarn clean && yarn compile",
    "compile": "tsc --build && cp \"./package.json\" ./dist/",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@polkadot/api": "^6.9.0",
    "@centrifuge-cli/core": "0.1.0",
    "inquirer": "^8.2.0"
  },
  "devDependencies": {
    "@fancy-test/nock": "^0.1.1",
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/plugin-help": "^3.2.0",
    "@oclif/test": "^1.2.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.0",
    "@types/shell-escape": "^0.2.0",
    "@types/supports-color": "^8.1.0",
    "@types/urijs": "^1.19.0",
    "chai": "^4.3.0",
    "eslint": "^8.3.0",
    "eslint-config-oclif": "^4.0.0",
    "eslint-config-oclif-typescript": "^1.0.0",
    "globby": "^12.0.0",
    "mocha": "^9.1.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.4.0",
    "typescript": "~4.4.4"
  },
  "oclif": {
    "commands": "./dist/commands",
    "bin": "centrifuge",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "files": [
    "/dist",
    "/oclif.manifest.json",
    "/yarn.lock"
  ]
}